@page "/AddAdult"
@using Models
@using FileData
@inject IfileContext File
<h3>AddAdult</h3>


<EditForm Model="@newPerson" OnValidSubmit="@AddNewAdult">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        User Id:<br/>
        <InputNumber @bind-Value="newPerson.Id"/>
    </div>
    <div class="form-group">
        First Name:<br/>
        <InputText rows="4" @bind-Value="newPerson.FirstName"/>
    </div>
    <div class="form-group">
        Last Name:<br/>
        <InputText rows="4" @bind-Value="newPerson.LastName"/>
    </div>
    <div class="form-group">
        Weight:<br/>
        <InputNumber rows="4" @bind-Value="newPerson.Weight"/>
    </div>
    <div class="form-group" >
        HairColor:<br/>
        <InputText rows="4" @bind-Value="newPerson.HairColor"/>
    </div>
    <div class="form-group">
        Eye Color:<br/>
        <InputText rows="4" @bind-Value="newPerson.EyeColor"/>
    </div>
    <div class="form-group">
        Age:<br/>
        <InputNumber rows="4" @bind-Value="newPerson.Age"/>
    </div>
    <div class="form-group">
        Height:<br/>
        <InputNumber rows="4" @bind-Value="newPerson.Height"/>
    </div>
    <div class="form-group">
            JobTitle:<br/>
            <InputText rows="4" @bind-Value="newPerson.JobTitle"/>
        </div>
    <div class="form-group">
        Sex:<br/>
        <InputSelect rows="4" @bind-Value="newPerson.Sex">
            <option value="">Select sex...</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </InputSelect>
    </div>
    
   
    
    
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>



@code {
    
    private Adult newPerson = new Adult();
    

    private void AddNewAdult()
    {
        File.AddAdult(newPerson);
        newPerson = new Adult();
    }
    
    
    
}